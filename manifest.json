{
  "manifest_version": 3,
  "name": "SignMate",
  "version": "1.0",
  "description": "Convert YouTube videos to sign language with a pop-up interpreter box.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fbx/*.fbx"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}